{
  "$schema": "https://design-tokens.org/schemas/v1.0.0/design-tokens.schema.json",
  "name": "Sans Concept Tokens",
  "version": "0.1.0",
  "color": {
    "primitive": {
      "night": {
        "50": { "$type": "color", "$value": "#f6f5f1" },
        "200": { "$type": "color", "$value": "#ded9cf" },
        "400": { "$type": "color", "$value": "#b8b0a2" },
        "700": { "$type": "color", "$value": "#4b463f" },
        "900": { "$type": "color", "$value": "#1f1b16" }
      },
      "fern": {
        "300": { "$type": "color", "$value": "#6fc2a6" },
        "500": { "$type": "color", "$value": "#1b7f6a" },
        "700": { "$type": "color", "$value": "#0f5f50" }
      },
      "sun": {
        "300": { "$type": "color", "$value": "#f2c56d" },
        "500": { "$type": "color", "$value": "#e6a547" }
      }
    },
    "semantic": {
      "brand": {
        "primary": { "$type": "color", "$value": "{color.primitive.fern.500}" },
        "primary-hover": { "$type": "color", "$value": "{color.primitive.fern.700}" }
      },
      "text": {
        "primary": { "$type": "color", "$value": "{color.primitive.night.900}" },
        "secondary": { "$type": "color", "$value": "{color.primitive.night.700}" }
      },
      "background": {
        "canvas": { "$type": "color", "$value": "{color.primitive.night.50}" },
        "surface": { "$type": "color", "$value": "#ffffff" }
      },
      "border": {
        "default": { "$type": "color", "$value": "{color.primitive.night.200}" }
      }
    }
  },
  "typography": {
    "fontFamily": {
      "display": { "$type": "fontFamily", "$value": "'Space Grotesk', sans-serif" },
      "body": { "$type": "fontFamily", "$value": "'IBM Plex Sans', sans-serif" }
    }
  },
  "radius": {
    "sm": { "$type": "dimension", "$value": "0.5rem" },
    "md": { "$type": "dimension", "$value": "0.85rem" },
    "lg": { "$type": "dimension", "$value": "1.25rem" }
  }
}
